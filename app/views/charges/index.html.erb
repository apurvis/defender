<h1>Listing Charges</h1>

<table>
   <tr>
      <th>Name</th>
      <th>Offense Type</th>
      <th></th>
      <th></th>
   </tr>

   <% @charges.each do |charge| %>
      <tr>
         <td><%= link_to charge.name, charge %></td>
         <td><%= charge.offense_type %></td>
         <td><%= link_to 'Edit', edit_charge_path(charge) %></td>
         <td><%= link_to 'Destroy', charge, :confirm => 'Are you sure?', method: :delete %></td>
      </tr>
   <% end %>
</table>

<br />

<%= link_to 'New Charge', new_charge_path %>
