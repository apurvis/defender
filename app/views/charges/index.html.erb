<h1>Charges (<%= link_to 'Add a New Charge', new_charge_path %>)</h1>

<table>
   <tr>
      <th>Name</th>
      <th>Offense Type</th>
      <th>Edit</th>
      <th>Delete</th>
   </tr>

   <% @charges.each do |charge| %>
      <tr>
         <td><%= link_to charge.name, charge %></td>
         <td><%= charge.offense_type %></td>
         <td><%= link_to 'Edit', edit_charge_path(charge) %></td>
         <td><%= link_to 'Delete', charge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
   <% end %>
</table>
