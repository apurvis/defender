!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'D-Fender'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'D-Fender'}"}
    = stylesheet_link_tag 'application', media: 'all'
    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    %main{:role => "main"}
      = render 'layouts/messages'
      %div{:class => 'main_container'}
        = yield
      = render 'layouts/home'
