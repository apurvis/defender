<%= form_for(@event) do |f| %>
   <% if @event.errors.any? %>
      <div id='errorExplanation'>
         <h2><%= pluralize(@event.errors.count, 'error') %> prohibited this event from being saved:</h2>

         <ul>
            <% @event.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
            <% end %>
         </ul>
      </div>
   <% end %>

   <div class='field'>
      <%= f.label :case %>: <%= link_to @case.formatted_name, case_path(@case) %>
      <%= f.hidden_field :case_id, value: @case.id %>
   </div>

   <div class='field'>
      <%= f.label :type %><br />
      <%= select(:event, :type, ['CourtAppearance', 'Investigation']) %>
   </div>

   <div class='field'>
      <%= f.label :date %><br />
      <%= date_field(:event, :happened_at) %>
   </div>

   <div class='field'>
      <%= f.label :comment %><br />
      <%= f.text_area :comment %><br />
   </div>

   <div class='field'>
      <%= f.submit %>
   </div>
<% end %>
